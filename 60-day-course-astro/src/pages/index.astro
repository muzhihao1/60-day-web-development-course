---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/common/Navigation.astro';
import Footer from '../components/common/Footer.astro';

// 课程特色
const features = [
  {
    icon: '🎯',
    title: '零基础友好',
    description: '从最基础的概念开始，循序渐进',
  },
  {
    icon: '⏰',
    title: '每天1-2小时',
    description: '合理的学习节奏，适合在职学习',
  },
  {
    icon: '🏗️',
    title: '真实项目',
    description: '5个完整项目，构建实际作品集',
  },
  {
    icon: '📈',
    title: '渐进式学习',
    description: '每天专注一个概念，稳步提升',
  },
  {
    icon: '🎓',
    title: '专业指导',
    description: '详细解释，深入理解原理',
  },
  {
    icon: '🚀',
    title: '现代技术栈',
    description: 'React、Node.js、TypeScript等',
  },
];

// 学习路径
const learningPath = [
  { phase: 1, title: '现代Web基础', days: '12天', color: 'from-blue-400 to-blue-600' },
  { phase: 2, title: 'JavaScript精通', days: '12天', color: 'from-purple-400 to-purple-600' },
  { phase: 3, title: 'React开发', days: '16天', color: 'from-pink-400 to-pink-600' },
  { phase: 4, title: '后端开发', days: '12天', color: 'from-green-400 to-green-600' },
  { phase: 5, title: '全栈部署', days: '8天', color: 'from-orange-400 to-orange-600' },
];

// 统计数据
const stats = [
  { value: '60', label: '天完整课程' },
  { value: '5', label: '实战项目' },
  { value: '200+', label: '代码示例' },
  { value: '100%', label: '免费开源' },
];
---

<BaseLayout title="60天Web开发课程 - 从零到全栈工程师">
  <Navigation />
  
  <main>
    <!-- Hero Section -->
    <section class="relative bg-gradient-to-br from-gray-50 to-gray-100 dark:from-gray-900 dark:to-gray-800 overflow-hidden">
      <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24 sm:py-32">
        <div class="text-center">
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white mb-6">
            <span class="block">🚀 60天成为</span>
            <span class="block text-gradient">Web开发工程师</span>
          </h1>
          <p class="max-w-2xl mx-auto text-xl text-gray-600 dark:text-gray-300 mb-10">
            零基础到全栈工程师的完整学习路径。系统学习 HTML、CSS、JavaScript、React、Node.js，构建真实项目。
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a href="/course" class="btn btn-primary text-lg px-8 py-3">
              开始学习之旅 →
            </a>
            <a href="#curriculum" class="btn btn-secondary text-lg px-8 py-3">
              查看课程大纲
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Stats Section -->
    <section class="bg-white dark:bg-gray-800 py-12 border-b border-gray-200 dark:border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {stats.map((stat) => (
            <div class="text-center">
              <div class="text-3xl sm:text-4xl font-bold text-gradient mb-2">
                {stat.value}
              </div>
              <div class="text-sm text-gray-600 dark:text-gray-400">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-gray-50 dark:bg-gray-900">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            为什么选择这门课程？
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            精心设计的学习体验，让你高效掌握Web开发
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {features.map((feature) => (
            <div class="card card-hover p-6">
              <div class="text-4xl mb-4">{feature.icon}</div>
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {feature.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300">
                {feature.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Learning Path Section -->
    <section id="curriculum" class="py-20 bg-white dark:bg-gray-800">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center mb-16">
          <h2 class="text-3xl sm:text-4xl font-bold text-gray-900 dark:text-white mb-4">
            学习路径
          </h2>
          <p class="text-xl text-gray-600 dark:text-gray-300">
            5个阶段，循序渐进，每天都有新收获
          </p>
        </div>
        
        <div class="relative">
          <!-- 连接线 -->
          <div class="absolute left-1/2 transform -translate-x-1/2 w-1 h-full bg-gray-200 dark:bg-gray-700 hidden lg:block"></div>
          
          <div class="space-y-12">
            {learningPath.map((phase, index) => (
              <div class={`relative flex items-center ${index % 2 === 0 ? 'lg:flex-row' : 'lg:flex-row-reverse'}`}>
                <!-- 内容卡片 -->
                <div class="flex-1 lg:max-w-md">
                  <div class="card p-6 relative">
                    <div class={`absolute top-6 ${index % 2 === 0 ? 'lg:-right-12' : 'lg:-left-12'} hidden lg:block`}>
                      <div class={`w-8 h-8 bg-gradient-to-br ${phase.color} rounded-full ring-4 ring-white dark:ring-gray-800`}></div>
                    </div>
                    <div class="flex items-center mb-4">
                      <div class={`text-4xl font-bold bg-gradient-to-r ${phase.color} bg-clip-text text-transparent mr-3`}>
                        {phase.phase}
                      </div>
                      <div>
                        <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                          {phase.title}
                        </h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">
                          {phase.days}
                        </p>
                      </div>
                    </div>
                    <a href={`/course/phase-${phase.phase}`} class="text-primary hover:text-primary-dark font-medium">
                      查看详情 →
                    </a>
                  </div>
                </div>
                
                <!-- 空白占位 -->
                <div class="flex-1 hidden lg:block"></div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-br from-primary to-primary-dark">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-6">
          准备好开始你的Web开发之旅了吗？
        </h2>
        <p class="text-xl text-white/90 mb-10">
          加入数千名学习者，一起成长为专业的Web开发工程师
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/course/phase-1/day-1" class="btn bg-white text-primary hover:bg-gray-100 text-lg px-8 py-3">
            立即开始第一天课程
          </a>
          <a href="https://github.com/muzhihao1/60-day-web-development-course" target="_blank" rel="noopener noreferrer" class="btn bg-white/20 text-white hover:bg-white/30 border border-white/30 text-lg px-8 py-3">
            在 GitHub 上查看
          </a>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</BaseLayout>

<style>
  .bg-grid-pattern {
    background-image: 
      linear-gradient(to right, rgba(0, 0, 0, 0.1) 1px, transparent 1px),
      linear-gradient(to bottom, rgba(0, 0, 0, 0.1) 1px, transparent 1px);
    background-size: 20px 20px;
  }
</style>
