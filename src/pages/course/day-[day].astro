  const courses = await getCollection('courses')
  const phases = await getCollection('phases')
  
  return courses.map((course) => {
    const phase = phases.find(p => p.id.includes(course.data.phase))
    return {
      params: { day: course.data.day.toString() },
      props: { course, phase }
    }
  })
