      font-size: 0.875rem;
      line-height: 1.4;
    }

    /* 段落间距优化 */
    .course-content > p {
      margin-bottom: 1.75rem;
      color: var(--color-text-secondary);
      line-height: 1.9;
      font-size: 1.05rem;
    }
    
    /* 代码块前后的段落 */
    .course-content p + pre {
      margin-top: 1.5rem;
    }
    
    .course-content pre + p {
      margin-top: 1.75rem;
    }
    
    /* 标题后的第一个段落 */
    .course-content h2 + p,
    .course-content h3 + p,
    .course-content h4 + p {
      margin-top: 0.75rem;
    }
    
    /* 列表内的段落 */
    .course-content li p {
      margin-bottom: 0.5rem;
      font-size: inherit;
      line-height: inherit;
      display: inline;
    }
    
    /* 引用块内的段落 */
    .course-content blockquote p {
      margin-bottom: 0.75rem;
    }
    
    .course-content blockquote p:last-child {
      margin-bottom: 0;
    }

    /* 列表样式 - 清晰的层级系统 */
    .course-content ul,
    .course-content ol {
      margin: 1.25rem 0 1.75rem 0;
      padding-left: 1.5rem;
      list-style-position: outside;
    }
    
    /* 一级列表 */
    .course-content > ul > li,
    .course-content > ol > li {
      margin-bottom: 0.875rem;
      color: var(--color-text-secondary);
      line-height: 1.85;
      padding-left: 0.5rem;
    }
    
    /* 列表标记样式 */
    .course-content ul {
      list-style-type: disc;
    }
    
    .course-content ol {
      list-style-type: decimal;
    }
    
    /* 二级列表 */
    .course-content li > ul,
    .course-content li > ol {
      margin-top: 0.75rem;
      margin-bottom: 0.75rem;
      margin-left: 1.25rem;
    }
    
