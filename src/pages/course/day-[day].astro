      margin-bottom: 0;
    }

    /* 标题层级 - 更清晰的视觉分离 */
    .course-content h2 {
      font-size: 1.875rem;
      margin: 3.5rem 0 1.75rem 0;
      color: var(--color-text);
      font-weight: 700;
      padding-bottom: 0.75rem;
      border-bottom: 2px solid var(--color-border);
    }
    
    /* 第一个h2不需要顶部间距 */
    .course-content > h2:first-child {
      margin-top: 0;
    }

    .course-content h3 {
      font-size: 1.425rem;
      margin: 2.75rem 0 1.25rem 0;
