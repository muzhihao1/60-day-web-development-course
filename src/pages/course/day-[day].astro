      display: grid;
      grid-template-columns: 1fr auto;
      gap: 3rem;
      max-width: 1400px;
      margin: 0 auto;
      padding: 0 2rem;
      align-items: flex-start;
    }

    .course-container {
      max-width: 900px;
      width: 100%;
    }

    .toc-sidebar {
      position: sticky;
      top: 80px;
    }

    .course-header {
      margin-bottom: 3rem;
      padding-bottom: 2rem;
      border-bottom: 2px solid var(--color-border);
    }

    .course-meta {
      display: flex;
      gap: 1rem;
      margin-bottom: 1.5rem;
      flex-wrap: wrap;
    }

    .phase-badge,
    .difficulty-badge,
    .time-estimate {
      padding: 0.5rem 1rem;
      border-radius: var(--radius-md);
      font-size: 0.875rem;
      font-weight: 600;
    }

